# HTTPS 設定
server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name dev-splatoon3-tracker.nagiyu.com;

	# SSL 設定
	ssl_protocols TLSv1.2 TLSv1.3;
	ssl_ciphers HIGH:!MEDIUM:!LOW:!aNULL:!NULL:!SHA;
	ssl_prefer_server_ciphers on;
	ssl_session_cache shared:SSL:10m;
	ssl_session_tickets off;

	ssl_certificate /etc/letsencrypt/live/dev-splatoon3-tracker.nagiyu.com/fullchain.pem;
	ssl_certificate_key	/etc/letsencrypt/live/dev-splatoon3-tracker.nagiyu.com/privkey.pem;

	# セキュリティヘッダー
	add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
	add_header X-Content-Type-Options "nosniff" always;
	add_header X-Frame-Options "DENY" always;
	add_header X-XSS-Protection "1; mode=block" always;

	# Proxy設定
	location / {
		proxy_pass https://localhost:9022;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
	}
}

##### ##### #####

### LocalStack
server {
	listen 80;
	listen [::]:80;

	server_name dev-splatoon3-tracker-aws.nagiyu.com;

	location / {
		proxy_pass http://localhost:9023;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
	}
}

##### ##### #####

### Web
# HTTP -> HTTPS リダイレクト
server {
	listen 80;
	listen [::]:80;

	server_name splatoon3-tracker.nagiyu.com;

	return 301 https://$host$request_uri;
}

# HTTPS 設定
server {
	listen 443 ssl;
	listen [::]:443 ssl;

	server_name splatoon3-tracker.nagiyu.com;

	# SSL 設定
	ssl_protocols TLSv1.2 TLSv1.3;
	ssl_ciphers HIGH:!MEDIUM:!LOW:!aNULL:!NULL:!SHA;
	ssl_prefer_server_ciphers on;
	ssl_session_cache shared:SSL:10m;
	ssl_session_tickets off;

	ssl_certificate /etc/letsencrypt/live/splatoon3-tracker.nagiyu.com/fullchain.pem;
	ssl_certificate_key	/etc/letsencrypt/live/splatoon3-tracker.nagiyu.com/privkey.pem;

	# セキュリティヘッダー
	add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
	add_header X-Content-Type-Options "nosniff" always;
	add_header X-Frame-Options "DENY" always;
	add_header X-XSS-Protection "1; mode=block" always;

	# Proxy設定
	location / {
		proxy_pass http://15.152.160.213:5000;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_set_header Host $host;
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header X-Forwarded-Proto $scheme;
	}
}